{
  "manifest_version": 3,
  "name": "PCGUIDE.LK",
  "version": "1.2.0",
  "description": "Get real-time updates from PCGuide.lk tech blog",
  "permissions": ["alarms", "storage"],
  "host_permissions": ["https://pcguide.lk/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}